        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	var maxOpen = gs.getProperty ('x_843001_event_app.currentlyOpenNotes');
	var notes = new GlideRecord ('x_843001_event_app_notes_table');
	
	notes.addQuery('status','open');
	notes.query();
	
	var numberOfOpenNotes = notes.getRowCount();
	
	if (numberOfOpenNotes > maxOpen) {
		gs.addErrorMessage('Too many open Notes, the limit is ' + maxOpen + '.');
		current.setAbortAction(true);
	}

})(current, previous);
]]></script>
