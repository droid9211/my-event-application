        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	var myevapputils = new MyEvAppUtils();
	var isPast = myevapputils.isDatePast(current.event_date);
	if(isPast == true) {
		gs.addErrorMessage("Selected date cannot be in the past. Your request has not been saved to the database.");
		current.setAbortAction(true);
	}
	
	var isToday = myevapputils.isDateToday(current.event_date);
	if(isToday == true){
		gs.addErrorMessage("You cannot submit more requests for today.");
		current.setAbortAction(true);
	}
			
})(current, previous);]]></script>
